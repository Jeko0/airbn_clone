<div 
  data-controller="geolocation"
  class="container mx-auto py-16"
  data-latitude="<%= current_user&.profile&.latitude %>"
  data-longitude="<%= current_user&.profile&.longitude %>"
  >
  <ul role="list" class="grid grid-cols-1 gap-x-4 gap-y-8 sm:grid-cols-4 sm:gap-x-6 lg:grid-cols-5 xl:gap-x-8">
    <% @properties.each do |property| %>
    <li 
      class="relative"
      data-geolocation-target="property"
      data-latitude="<%= property.latitude %>"
      data-longitude="<%= property.longitude %>"
      >
      <div class="group block w-full aspect-w-10 aspect-h-7 rounded-lg bg-gray-100 focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-offest-gray-100">
        <img src="https://media.istockphoto.com/photos/mountain-landscape-picture-id517188688?k=20&m=517188688&s=612x612&w=0&h=i38qBm2P-6V4vZVEaMy_TaTEaoCMkYhvLCysE7yJQ5Q=" alt="" class="rounded-md">
        <button type="button" class="absolute inset-0 focus:outline-none">
          <span class="sr-only">View Details</span>
        </button>
      </div>
      <p class="mt-2 block text-sm font-medium text-gray-900 truncate pointer-event-none"><%= property.city %>, <%= property.state %>, <%= property.country %></p>
      <p data-distance class="block text-sm font-medium text-gray-500 truncate pointer-event-none"></p>
      <p class="block text-sm font-medium text-gray-500 truncate pointer-event-none">Jun 19 - 24</p>
      <p class="block text-sm font-medium text-gray-500 truncate pointer-event-none"><%= humanized_money_with_symbol(property.price) %> per night</p>
    </li>
    <% end %>
  </ul>
</div>