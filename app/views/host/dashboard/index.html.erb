<div class="h-full bg-gray-100 profiles-page">
  <main class="max-w-7xl mx-auto pb-10 lg:py-12 lg:px-8">
    <div class="lg:grid lg:grid-cols-12 lg:gap-x-5">

    <%= render "host/dashboard/sidebar" %>
    
      <div class="space-y-6 sm:px-6 lg:px-0 lg:col-span-9">
        <div class="-ml-4 -mt-2 flex items-center justify-between flex-wrap sm:flex-nowrap">
          <div class="ml-4 mt-2">
            <h3 class="text-lg leading-6 font-medium text-gray-900">Your properties</h3>
          </div>
          <div class="ml-4 mt-2 flex-shrink-0">
            <%= link_to "Create new property", new_host_property_path, class: "relative inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md bg-indigo-500 text-white focus:ring-2 focus:ring-offset-2 focust:ring-indigo-500" %>
          </div>
        </div>
        <div class="bg-white shadow overflow-hidden sm:rounded-md">
          <ul role="list" class="divide-y divide-gray-200">
            <% @properties.each do |property| %>
              <li>
                <%= link_to property_path(property), class: "block hover:bg-gray-200" do %>
                  <div class="flex items-center px-4 py-4 sm:px-6">
                    <div class="min-w-0 flex-1 flex items-center">
                      <div class="flex-shrink-0">
                        <%= image_tag property.default_image, class: "h-12 w-12 rounded-full" %>
                      </div>
                      <div class="min-w-0 flex-1 px-4 md:grid md:grid-cols-2 md:gap-4">
                        <div>
                          <p class="text-sm font-medium text-indigo-600 truncate"><%= property.name %></p>
                          <p class="mt-2 flex items-center text-sm text-gray-500">
                            <span class="truncate"><%= property.headline %></span>
                          </p>
                        </div>
                        <div class="hidden md:block">
                          <div>
                            <p class="text-sm text-gray-900">
                              Created on 
                              <time><%= property.created_at.to_fs(:reservation_format) %></time>
                            </p>
                            <p class="mt-2 flex items-center text-sm text-gray-500">
                              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="green" class="w-5 h-5 flex-shrink-0 mr-1.5 text-gray-400">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                              </svg>
                              <%= property.reservations.future_reservations.size %> Active Reservations
                            </p>
                          </div>
                        </div>
                      </div>
                    </div>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
                    </svg>
                  </div>
                <% end %>
              </li>
            <% end %>
          </ul> 
        </div>
      </div>
    </div>
  </main>
</div>