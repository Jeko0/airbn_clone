<div class="h-full bg-gray-100 profiles-page">
  <main class="max-w-7xl mx-auto pb-10 lg:py-12 lg:px-8">
    <div class="lg:grid lg:grid-cols-12 lg:gap-x-5">

    <%= render "host/dashboard/sidebar" %>
    
      <div class="space-y-6 sm:px-6 lg:px-0 lg:col-span-9">
        <div class="bg-white shadow overflow-hidden sm:rounded-md">
          <%= form_with model: @property, url: host_properties_path, local: true do |f| %>
            <div class="shadow sm:rounded-md sm:overflow-hidden">
              <div class="bg-white py-6 px-4 space-y-6 sm:p-6">
                <div>
                  <h2 class="text-lg leading-6 font-medium text-gray-900">Add new Property</h2>
                  <p class="mt-1 text-sm text-gray-500">Use this form to create new property for hosting</p>
                </div>

                <div class="grid grid-cols-6 gap-6">
                  <div class="col-span-6 sm:col-span-3">
                    <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
                    <%= f.text_field :name, class: "mt-1 block w-full border border-gray-200 rounded-md shadow-sm py-2 px-3 foucs:outine-none focus:ring-gray-900 focus:border-gray-900 sm:text-sm" %>
                  </div>

                  <div class="col-span-6 sm:col-span-3">
                    <%= f.label :headline, class: "block text-sm font-medium text-gray-700" %>
                    <%= f.text_field :headline, class: "mt-1 block w-full border border-gray-200 rounded-md shadow-sm py-2 px-3 foucs:outine-none focus:ring-gray-900 focus:border-gray-900 sm:text-sm" %>
                  </div>

                  <div class="col-span-6">
                    <%= f.label :description, class: "block text-sm font-medium text-gray-700" %>
                    <%= f.text_area :description, class: "mt-1 block w-full border border-gray-200 rounded-md shadow-sm py-2 px-3 foucs:outine-none focus:ring-gray-900 focus:border-gray-900 sm:text-sm" %>
                  </div>

                  <div class="col-span-6">
                    <%= f.label :address_1, class: "block text-sm font-medium text-gray-700" %>
                    <%= f.text_field :address_1, class: "mt-1 block w-full border border-gray-200 rounded-md shadow-sm py-2 px-3 foucs:outine-none focus:ring-gray-900 focus:border-gray-900 sm:text-sm" %>
                  </div>

                  <div class="col-span-6">
                    <%= f.label :address_2, class: "block text-sm font-medium text-gray-700" %>
                    <%= f.text_field :address_2, class: "mt-1 block w-full border border-gray-200 rounded-md shadow-sm py-2 px-3 foucs:outine-none focus:ring-gray-900 focus:border-gray-900 sm:text-sm" %>
                  </div>

                  <div class="col-span-6 sm:col-span-6 lg:col-span-2">
                    <%= f.label :city, class: "block text-sm font-medium text-gray-700" %>
                    <%= f.text_field :city, class: "mt-1 block w-full border border-gray-200 rounded-md shadow-sm py-2 px-3 foucs:outine-none focus:ring-gray-900 focus:border-gray-900 sm:text-sm" %>
                  </div>

                  <div class="col-span-6 sm:col-span-6 lg:col-span-2">
                    <%= f.label :state, class: "block text-sm font-medium text-gray-700" %>
                    <%= f.text_field :state, class: "mt-1 block w-full border border-gray-200 rounded-md shadow-sm py-2 px-3 foucs:outine-none focus:ring-gray-900 focus:border-gray-900 sm:text-sm" %>
                  </div>

                  <div class="col-span-6 sm:col-span-6 lg:col-span-2">
                    <%= f.label :zip_code, class: "block text-sm font-medium text-gray-700" %>
                    <%= f.text_field :zip_code, class: "mt-1 block w-full border border-gray-200 rounded-md shadow-sm py-2 px-3 foucs:outine-none focus:ring-gray-900 focus:border-gray-900 sm:text-sm" %>
                  </div>

                  <div class="col-span-6 sm:col-span-4">
                    <%= f.label :country_code, class: "block text-sm font-medium text-gray-700" %>
                    <%= f.country_select :country_code, { priority_countries: ["US", "CA"] }, class: "mt-1 block w-full border border-gray-200 rounded-md shadow-sm py-2 px-3 foucs:outine-none focus:ring-gray-900 focus:border-gray-900 sm:text-sm" %>
                  </div>

                  <div class="col-span-6 sm:col-span-4">
                    <%= f.label :images, class: "block text-sm font-medium text-gray-700" %>
                    <%= f.file_field :images %>
                  </div>
                </div>
              </div>
              <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
                <%= f.submit :save, class: "bg-gray-800 border border-transparent rounded-md shadow-sm text-white p-2 cursor-pointer" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </main>
</div>